<!DOCTYPE html>
<html class="loading" lang="en">
<head>
    <%- include('../../partials/head') %>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
</head>
<body class="vertical-layout vertical-menu 2-columns menu-expanded fixed-navbar" data-open="click" data-menu="vertical-menu" data-color="bg-chartbg" data-col="2-columns">
    <%- include('../../partials/nav_header') %>
    <%- include('../../partials/nav_main') %>

    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-wrapper-before"></div>
            <div class="content-header row">
                <div class="content-header-left col-md-4 col-12 mb-2">
                    <h3 class="content-header-title">Add New Article</h3>
                </div>
                <div class="content-header-right col-md-8 col-12">
                    <div class="breadcrumbs-top float-md-right">
                        <div class="breadcrumb-wrapper mr-1">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item active"><a href="/news">News</a>
                            </li>
                            <li class="breadcrumb-item active">Add New
                            </li>
                        </ol>
                        </div>
                    </div>
                </div>
                <div class="content-body col-12">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Add New</h4>
                                </div>
                                <div class="card-block">
                                    <div class="card-body">
                                        <fieldset class="form-group">
                                            <fieldset class="form-group">
                                            <h5 class="mt-2">Title *</h5>
                                            <input type="text" class="form-control" id="addTxtTitle">
                                        </fieldset>
                                        <fieldset class="form-group">
                                            <h5 class="mt-2">Long Text * <span style="font-size: 9pt">(Gunakan Ctrl+B untuk Bold, Ctrl+U untuk underline, Ctrl+I untuk italic)</span></h5>
                                            <div id="addTxtLongText" style="border-style: solid; border-color: rgb(202, 202, 202); border-width: 1px;padding: 10px;height: 300px;"></div>
                                            <!-- <textarea id="addTxtAnswer" class="form-control" ></textarea> -->
                                        </fieldset>
                                        <fieldset class="form-group">
                                            <fieldset class="form-group">
                                            <h5 class="mt-2">Image</h5>
                                            <input type="file" id="image" name="image" />
                                            <p class="text-muted">Pastikan format icon JPG background transparant. <code>(Ukuran 600px x 300px)</code></p>
                                        </fieldset>
                                        <fieldset class="form-group">
                                            <fieldset class="form-group">
                                            <h5 class="mt-2">Publish?</h5>
                                            <select class="custom-select" id="addPublishedSelect" name="addPublishedSelect">
                                                <option value="true">Publish</option>
                                                <option value="false">Draft</option>
                                            </select>
                                        </fieldset>
													 
                                        <div class="alert alert-warning" role="alert" id="alert-news" style="display: none;"></div>
                                        <fieldset class="form-group">
                                            <a href="/news"><button type="button" class="btn btn-secondary btn-min-width mr-1 mb-1">Back</button></a>
                                            <button type="button" onclick="addNewsSubmit()" class="btn btn-primary btn-min-width mr-1 mb-1">Submit</button>
                                        </fieldset>
                                        <div class="alert alert-success" role="alert" id="alert-news-success" style="display: none;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>
	 
	 
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <script src="/function/global.js" type="text/javascript"></script>
	<script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
	<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script src="/function/news-function.js" type="text/javascript"></script>
    <script src="/assets/js/nicEdit.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/gasparesganga-jquery-loading-overlay@2.1.7/dist/loadingoverlay.min.js" type="text/javascript"></script>
</body>
</html>